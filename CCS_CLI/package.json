{
    "name": "ccs-cli",
    "version": "1.0.0",
    "description": "Unified CLI and MCP tool for CharacterCard Studio",
    "main": "dist/index.js",
    "bin": {
        "st": "./dist/index.js",
        "ccs": "./dist/index.js"
    },
    "type": "module",
    "scripts": {
        "build": "tsup",
        "start": "node dist/index.js",
        "dev": "tsx src/index.ts",
        "watch": "tsup --watch",
        "mcp": "node dist/index.js mcp --sse",
        "mcp:sse": "tsx src/index.ts mcp --sse",
        "mcp:stdio": "tsx src/index.ts mcp",
        "dev:sse": "nodemon --watch src --exec 'tsx src/index.ts mcp --sse'"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.0",
        "@types/express": "^5.0.6",
        "axios": "^1.7.9",
        "chalk": "^5.3.0",
        "chokidar": "^5.0.0",
        "cli-progress": "^3.12.0",
        "commander": "^12.1.0",
        "diff": "^8.0.3",
        "dotenv": "^16.4.5",
        "express": "^5.2.1",
        "figlet": "^1.10.0",
        "gradient-string": "^3.0.0",
        "inquirer": "^9.2.23",
        "js-yaml": "^4.1.0",
        "ora": "^8.2.0",
        "yaml": "^2.8.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/cli-progress": "^3.11.6",
        "@types/diff": "^7.0.2",
        "@types/figlet": "^1.7.0",
        "@types/inquirer": "^9.0.9",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^20.14.9",
        "nodemon": "^3.1.11",
        "tsup": "^8.5.1",
        "tsx": "^4.16.2",
        "typescript": "^5.5.3"
    }
}
